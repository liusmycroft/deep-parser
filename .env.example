# =============================================================================
# External Services (provided by infrastructure, configure addresses here)
# =============================================================================

# MySQL — metadata storage
DATABASE_URL=mysql+aiomysql://root:password@your-mysql-host:3306/deep_parser

# Elasticsearch — full-text search + optional vector search
ES_HOSTS=http://your-es-host:9200
ES_USERNAME=
ES_PASSWORD=

# Milvus — vector search
MILVUS_HOST=your-milvus-host
MILVUS_PORT=19530

# ClickHouse — vector search (experimental)
CLICKHOUSE_HOST=your-clickhouse-host
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Airflow — ETL workflow orchestration
AIRFLOW_BASE_URL=http://your-airflow-host:8080

# =============================================================================
# LLM / Embedding / I2T Configuration
# =============================================================================

# LLM Provider
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-xxx
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini

# Embedding Provider
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIM=1536

# I2T Provider
I2T_PROVIDER=openai
I2T_MODEL=gpt-4o-mini

# =============================================================================
# Application Settings
# =============================================================================

# Storage
STORAGE_BASE_PATH=./data/storage
IMAGE_HOST_BASE_URL=http://localhost:8000/api/images

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
